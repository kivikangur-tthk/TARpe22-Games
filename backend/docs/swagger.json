                "examples": {
                  "InvalidID": {
                    "value": {
                      "error": "ID must be a whole number: ab12"
                    }
                  }
                }
              }
            },
            "description": "Invalid request path parameter\n"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "NotFound": {
                    "value": {
                      "error": "Game Not Found!"
                    }
                  }
                }
              }
            },
            "description": "Game with given id does not exist"
