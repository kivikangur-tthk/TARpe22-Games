          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Modify existing game"
      },
      "delete": {
        "tags": [
          "GAMES"
        ],
        "parameters": [
          {
            "name": "id",
            "description": "Id of game to be deleted",
