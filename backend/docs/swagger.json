          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "IdError": {
                    "value": {
                      "error": "ID must be a whole number: esimene"
                    }
                  }
                }
              }
            },
            "description": "Incorrect Id"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "NotFound": {
                    "value": {
                      "error": "Game Not Found!"
                    }
                  }
                }
              }
            },
            "description": "Game not found"
          }
        },
        "summary": "Remove a game"
      }
    },
